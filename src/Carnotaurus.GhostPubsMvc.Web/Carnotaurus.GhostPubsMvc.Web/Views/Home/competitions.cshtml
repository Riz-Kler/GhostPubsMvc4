@model Carnotaurus.GhostPubsMvc.Data.Models.ViewModels.OutputViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.JumboTitle;
    ViewBag.Description = Model.Description;
}

<!-- Subhead
    ================================================== -->
<header class="jumbotron subhead">
    <div class="container">
        <div>
            <h1>@Model.JumboTitle</h1>
            <p class="lead">
                @Model.Description
            </p>
        </div>
    </div>
</header>

<div class="container">
    <!-- Docs nav
       ================================================== -->
    <div class="row" style="min-height:30px;">

        <a href="http://www.ghostpubs.com" title="Home">Home</a>

        <span>&gt;</span>
        <a href="http://www.ghostpubs.com/haunted_pubs/@Model.JumboTitle.ToLower()/detail.html" title="@Model.JumboTitle">@Model.JumboTitle</a>

    </div>
    <div class="row">
        <div class="span4">
            <div>
                <div>
                    <img onclick=" window.open('http://www.ghostpubs.com/haunted_pub/detail.html', '_self'); " class="img-circle face-relative" src="~/Content/bootstrap/231/img/ghostpubs/padded-logo-125x125.png" alt="Ghost Pubs" title="Ghost Pubs" />

                </div>

            </div>
        </div>


        <div class="span8">

            <!-- Well
            ================================================== -->
            <section id="well">
                <div class="page-header">
                    <h1>Competition to name our ghost</h1>
                </div>
                <h2>You get the chance to name our ghost in our logo</h2>
                <div class="well well-large">
                    <p>
                        Our ghost in the our logo needs a name. Yes, that's the one with the glass of wine in hand. Is the ghost male or female? We're not quite sure of that either. So, just think of an appropriate name. Then tweet it to us at <a rel="nofollow" href="http://www.twitter.com/ghost_pubs" title="Tweet the name of our ghost">@@ghost_pubs</a>
                    </p>
                    <p>
                        The winner gets credited for naming the ghost on our contributors page.
                    </p>

                    <p>
                        Kindest regards,
                    </p>
                    <p>
                        <strong>The Ghost Pubs Team</strong>
                    </p>
                    <p>
                        <a href="http://www.GhostPubs.com" title="www.GhostPubs.com">www.GhostPubs.com</a>
                    </p>
                </div>

                <hr>
            </section>
        </div>

    </div>
</div>
