@model Carnotaurus.GhostPubsMvc.Data.Models.ViewModels.OutputViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.JumboTitle;
    ViewBag.Link = "http://www.ghostpubs.com/haunted_pub/detail.html";
    ViewBag.Description = Model.Description;
    ViewBag.Tag = Model.Tag;
    ViewBag.Tags = Model.Tags;
}

<!-- Subhead
    ================================================== -->
<header class="jumbotron subhead">
    <div class="container">
        <div>
            <h1>@Model.JumboTitle</h1>
            <p class="lead">
                @Model.Description
            </p>
        </div>
    </div>
</header>

<div class="container">

    <!-- Docs nav
        ================================================== -->
    <div class="row" style="min-height:30px;">

        <a href="http://www.ghostpubs.com" title="Home">Home</a>

        <span>&gt;</span>
        <a href="http://www.ghostpubs.com/haunted_pub/detail.html" title="Regions">Regions</a>

        <script>
            (function () {
                var cx = '011800392060597881327:fu4heiztlci';
                var gcse = document.createElement('script');
                gcse.type = 'text/javascript';
                gcse.async = true;
                gcse.src = (document.location.protocol == 'https:' ? 'https:' : 'http:') +
                    '//www.google.com/cse/cse.js?cx=' + cx;
                var s = document.getElementsByTagName('script')[0];
                s.parentNode.insertBefore(gcse, s);
            })();
        </script>
        <gcse:search></gcse:search>
    </div>
    <div class="row"><p>&nbsp;</p></div>
    <div class="row">
        <div class="span4 bs-docs-sidebar text-center">
            <div>
                <div>
                    @*<a href="/haunted_pub/detail.html">*@
                    <img onclick=" window.open('http://www.ghostpubs.com/haunted_pub/detail.html', '_self'); " class="img-circle face-relative" src="~/Content/bootstrap/231/img/ghostpubs/padded-logo-125x125.png" alt="Ghost Pubs" title="Ghost Pubs" />
                    @*</a>*@
                </div>

                <div class="btn-group btn-group-vertical">
                    @foreach (var link in Model.PageLinks)
                    {
                        <a class="btn btn-large btn-primary" style="-moz-min-width: 200px; -ms-min-width: 200px; -o-min-width: 200px; -webkit-min-width: 200px; min-width: 200px" title='@link.Title' href='@link.Url'>@link.Text</a>
                    }
                </div>
            </div>
        </div>

        <div class="span8">

            <!-- Carousel
                ================================================== -->
            <section id="carousel">
                <div class="page-header">
                    <h1>@Model.JumboTitle</h1>
                </div>
                <h2>Let's journey through our haunted locations</h2>
                <p>Please select from a haunted region from the following list:</p>
                <ul>
                    @foreach (var link in @Model.PageLinks)
                    {
                        <li>
                            <a title='@link.Title' href='@link.Url'>@link.Text</a>
                        </li>
                    }
                </ul>


                <div id="fb-root"></div>

                <div class="fb-comments" data-href="@ViewBag.Link" data-numposts="5" data-colorscheme="dark"></div>

                <p><a href='/' title="Back to @Model.Parent.Key">Back to @Model.Parent.Key</a></p>


                <hr class="bs-docs-separator">
            </section>
        </div>
    </div>


</div>
