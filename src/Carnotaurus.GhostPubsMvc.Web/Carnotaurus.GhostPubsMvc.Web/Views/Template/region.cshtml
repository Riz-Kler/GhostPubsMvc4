@model Carnotaurus.GhostPubsMvc.Data.Models.ViewModels.OutputViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.JumboTitle;
    ViewBag.Link = Model.Lineage.Region.Url;
    ViewBag.MetaDescription = Model.MetaDescription; ViewBag.ArticleDescription = Model.ArticleDescription;
    
    ViewBag.Tag = Model.Tag;
    ViewBag.Tags = Model.Tags;
}

<!-- Subhead
    ================================================== -->
<header class="jumbotron subhead">
    <div class="container">
        <div>
            <h1>Ghost pubs in the @Model.JumboTitle region</h1>
            <p class="lead">
                @Model.ArticleDescription
            </p>
        </div>
    </div>
</header>

<div class="container">

    <!-- Docs nav
        ================================================== -->
    <div class="row" style="min-height: 30px;">

        <a href="/" title="Home">Home</a>

        <span>&gt;</span>
        <a href="/haunted_pub/detail.html" title="Regions">Regions</a>

        @if (Model.Lineage.Region != null)
        {
            <span>&gt;&nbsp;</span>
            <span>@Model.Lineage.Region.Text</span>
        }

    </div>
    <div class="row"><p>&nbsp;</p></div>
    <div class="row">
        <div class="span4 bs-docs-sidebar text-center">
            <div>
                <div>
                    <img onclick=" window.open('http://www.ghostpubs.com/haunted_pub/detail.html', '_self'); " class="img-circle face-relative" src="~/Content/bootstrap/231/img/ghostpubs/padded-logo-125x125.png" alt="Ghost Pubs" title="Ghost Pubs" />
                </div>

                <div class="btn-group btn-group-vertical">
                    @foreach (var link in Model.PageLinks)
                    {
                        <a class="btn btn-large btn-primary" style="min-width: 200px" title='@link.Title' href='@link.Url'>@link.Text</a>
                    }
                </div>
            </div>
        </div>



        <div class="span8">

            <!-- Carousel
                ================================================== -->
            <section id="carousel">
                <div class="page-header">
                    <h1>@Model.JumboTitle <span class="label label-info">@Model.Total haunted pubs</span></h1>
                </div>

                <h2>Let's journey through our haunted locations</h2>
                <p>Please select from a haunted county from the following list:</p>
                <ul>
                    @foreach (var link in @Model.PageLinks)
                    {
                        <li>
                            <a rel="nofollow" title='@link.Title' href='@link.Url'>@link.Text</a>
                        </li>
                    }
                </ul>
                @if (Model.Previous != null)
                {
                    <p><a href='@Model.Previous.Url' title="Next to @Model.Previous.JumboTitle">Next to @Model.Previous.JumboTitle</a></p>
                }


                <div id="fb-root"></div>

                <div class="fb-comments" data-href="@ViewBag.Link" data-numposts="5" data-colorscheme="dark"></div>



                <div class="fb-like" data-href="@ViewBag.Link" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>

                <p><a href='../detail.html' title="Back to regions">Back to regions</a></p>

                <hr class="bs-docs-separator">
            </section>
        </div>
    </div>
</div>
