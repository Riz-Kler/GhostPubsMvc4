@model Carnotaurus.GhostPubsMvc.Data.Models.ViewModels.OutputViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.JumboTitle;
    ViewBag.MetaDescription = Model.MetaDescription;
    ViewBag.ArticleDescription = Model.ArticleDescription;
}

<!-- Subhead
    ================================================== -->
<header class="jumbotron subhead">
    <div class="container">
        <div>
            <h1>@Model.JumboTitle</h1>
            <p class="lead">
                @Model.ArticleDescription
            </p>
        </div>
    </div>
</header>

<div class="container">
    <!-- Docs nav
        ================================================== -->
    <div class="row">

        <a href="/" title="Home">Home</a>

        <span>&gt;&nbsp;</span>
        <span>@Model.JumboTitle</span>

    </div>
    <div class="row">
        <div class="span4">
            <div>
                <div>
                    <img width='200' height='200' onclick=" window.open('http://www.ghostpubs.com/haunted-pubs/uk.html', '_self'); " class="img-circle face-relative" src="~/Content/bootstrap/231/img/ghostpubs/padded-logo-125x125.png" alt="Ghost Pubs" title="Ghost Pubs" />

                </div>

            </div>
        </div>


        <div class="span8">

            <!-- Well
                ================================================== -->
            <section id="well">
                <div class="page-header">
                    <h1>Helping us to help you!</h1>
                </div>

                <div class="accordion" id="accordion2">
                    <div class="accordion-group">
                        <div class="accordion-heading">
                            <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
                                Call for developers
                            </a>
                        </div>
                        <div id="collapseOne" class="accordion-body collapse" style="height: 0px;">
                            <div class="accordion-inner">
                                <div class="well well-large">
                                    <p>
                                        Hello devs,
                                    </p>

                                    <p>
                                        Volunteering with Ghost Pubs is about more than lending a hand. It’s about learning, collaborating and sharing your skills — coders, organizers, activists and more — who help shape the Web every day.
                                    </p>

                                    <p>
                                        Please get in touch with us on <a href="https://twitter.com/ghost_pubs">twitter</a> or <a href="https://www.facebook.com/ghostpubspage">facebook</a>. You'll receive full credit and you may win a prize.
                                    </p>
                                    <p>
                                        If you know any volunteer developers who want to get involved in the infamy then please tell them we're on <a href="https://github.com/GhostPubs">GitHub</a> 
                                    </p>
                                    <p>
                                        Kindest regards,
                                    </p>
                                    <p>
                                        <strong>The Ghost Pubs Team</strong>
                                    </p>
                                    <p>
                                        <a href="/" title="The Ghost Pubs website">www.GhostPubs.com</a>
                                    </p>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="accordion-group">
                        <div class="accordion-heading">
                            <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
                                Call for ghost story writers
                            </a>
                        </div>
                        <div id="collapseTwo" class="accordion-body collapse" style="height: 0px;">
                            <div class="accordion-inner">
                                <div class="well well-large">
                                    <p>
                                        Hello there,
                                    </p>

                                    <p>
                                        We officially launched Ghost Pubs on Halloween 2013. We have not yet covered every haunted public house.
                                        Indeed, the usefulness of our website depends upon contributions from our perspective readers.
                                        Yes, that's you! So, please feel free to send us any ghostly information about public houses that you have visited. For full coverage, it all rests on your contributions.
                                    </p>
                                    <p>
                                        Please send us your story as soon as possible through <a href="https://twitter.com/ghost_pubs">twitter</a> or <a href="https://www.facebook.com/ghostpubspage">facebook</a>. You'll receive full credit and you may win a prize.
                                    </p>
                                    <p>
                                        Who knows: If we get enough interest then we may organise local ghost tours in your area.
                                    </p>
                                    <p>
                                        Thanks in advance for the interest.
                                    </p>
                                    <p>
                                        Kindest regards,
                                    </p>
                                    <p>
                                        <strong>The Ghost Pubs Team</strong>
                                    </p>
                                    <p>
                                        <a href="/" title="The Ghost Pubs website">www.GhostPubs.com</a>
                                    </p>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>


                <div class="fb-like" data-href="@ViewBag.Link" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>

                <hr>
            </section>
        </div>

    </div>
</div>
