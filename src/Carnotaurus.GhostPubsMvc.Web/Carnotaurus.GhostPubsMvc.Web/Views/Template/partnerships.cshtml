@model Carnotaurus.GhostPubsMvc.Data.Models.ViewModels.OutputViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.JumboTitle;
    ViewBag.MetaDescription = Model.MetaDescription; ViewBag.ArticleDescription = Model.ArticleDescription;

}

<!-- Subhead
    ================================================== -->
<header class="jumbotron subhead">
    <div class="container">
        <div>
            <h1>@Model.JumboTitle</h1>
            <p class="lead">
                @Model.ArticleDescription
            </p>
        </div>
    </div>
</header>

<div class="container">
    <!-- Docs nav
        ================================================== -->
    <div class="row" style="min-height: 30px;">

        <a href="/" title="Home">Home</a>

        <span>&gt;&nbsp;</span>
        <span>@Model.JumboTitle</span>

    </div>
    <div class="row">
        <div class="span4">
            <div>
                <div>
                    <img onclick=" window.open('http://www.ghostpubs.com/haunted_pub/detail.html', '_self'); " class="img-circle face-relative" src="~/Content/bootstrap/231/img/ghostpubs/padded-logo-125x125.png" alt="Ghost Pubs" title="Ghost Pubs" />

                </div>

            </div>
        </div>
        <div class="span8">

            <!-- Well
                ================================================== -->
            <section id="well">
                <div class="page-header">
                    <h1>More detail</h1>
                </div>
                <h2>Get involved</h2>
                <div class="well well-large">
                    <p>Hi again,</p>
                    <p>
                        Please take a look at our links below:
                    </p>
                    <ul>
                        <li>
                            <a href="/haunted_pub/partnerships/detail.html">Partner with us</a>
                            <p>
                                Here at Ghost Pubs, we love a good ghost story however, we also love to craft new partnerships.
                            </p>
                        </li>
                        <li>
                            <a href="/haunted_pub/featuredpartner/detail.html">Featured partner</a>
                            <p>
                                You could even have a special promotion!
                            </p>
                        </li>
                        @*<li>
                                <a href="partners-merchandise.html">Merchandise</a>
                                <p>
                                    Why not buy some of our merchandise; or contact us about becoming a re-seller?
                                </p>
                            </li>*@
                    </ul>
                    <p>
                        Kindest regards,
                    </p>
                    <p>
                        <strong>The Ghost Pubs Team</strong>
                    </p>
                    <p>
                        <a href="/" title="The Ghost Pubs website">www.GhostPubs.com</a>
                    </p>
                </div>


                <div class="fb-like" data-href="@ViewBag.Link" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>

                <hr>
            </section>
        </div>
    </div>
</div>
